sol([]).

sol([x/y|o]):-
    sol(o),
    mem(y,[1,2,3,4,5,6,7,8]),
    noattack(x/y,o).

noattack(_,[]).

noattack(_x/y,[x1/y1|o]):-
    y=\=y1,
    y1-y=\=x1-x,
    y1-y=\=x-x1,
    noattack(x/y,o).
    
mem(x,[x|_]).
mem(x,[_|t]):-
    mem(x,t).
    
template([1/y1,2/y2,3/y3,4/y4,5/y5,6/y6,7/y7,8/y8]).
